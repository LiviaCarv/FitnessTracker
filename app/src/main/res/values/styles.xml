<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text">
        <item name="android:layout_marginHorizontal">@dimen/default_margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/default_margin_vertical</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/default_padding_button</item>
        <item name="android:backgroundTint">@color/icons_green</item>
    </style>

    <style name="texts">
        <item name="android:layout_marginHorizontal">@dimen/default_margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/default_margin_vertical</item>
        <item name="android:fontFamily">@font/livvic_light</item>
        <item name="android:textSize">@dimen/textSizeDefault</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>